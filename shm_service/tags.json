{
  "version": 1,

  "regions": {
    "read_only": {
      "path": "/dev/shm/raspiplc_read_only"
    },
    "read_write": {
      "path": "/dev/shm/raspiplc_read_write"
    }
  },

  "tags": {
    "smoker.temp": {
      "region": "read_only",
      "offset": 0,
      "type": "float32",
      "units": "degF",
      "description": "Smoker internal air temperature"
    },

    "meat.temp": {
      "region": "read_only",
      "offset": 4,
      "type": "float32",
      "units": "degF",
      "description": "Meat probe temperature"
    },

    "heater.1.pct": {
      "region": "read_only",
      "offset": 8,
      "type": "uint16",
      "scale": 0.1,
      "units": "percent",
      "description": "Heater 1 output percentage (actual state)"
    },

    "smoker.mode": {
      "region": "read_only",
      "offset": 12,
      "type": "uint8",
      "description": "Operating mode (0=off, 1=heat, 2=hold)"
    },

    "smoker.setpoint": {
      "region": "read_write",
      "offset": 0,
      "type": "float32",
      "units": "degF",
      "description": "Requested smoker temperature setpoint"
    }
  }
}
