[Unit]
Description=RaspiPLC Flask UI
After=network.target raspiplc-shm-init.service
Requires=raspiplc-shm-init.service

[Service]
Type=simple
WorkingDirectory=/opt/raspiplc/ui-flask
ExecStart=/usr/bin/env python3 /opt/raspiplc/ui-flask/app.py
Restart=always
RestartSec=2

# Run as root for now (simplest)
# User=raspiplc
# Group=raspiplc

[Install]
WantedBy=multi-user.target
